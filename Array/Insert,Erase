#include <iostream>
#include <algorithm>
using namespace std;

// idx:index 위치  num:삽입할 값  len:배열의 길이 나타냄
void insert(int idx, int num, int arr[], int& len){};

void erase(int idx, int arr[], int& len){};

int main(void)
{
	int arr[10] = { 10, 50, 40, 30, 70 , 20 };
	int len = 6; // 배열의 초기 갯수

	// 3번째 index에 60을 넣고 arr에 접근하기 위해 arr 작성. len의 갯수 자동으로 1증가
	insert(3, 60, arr, len);
	erase(4, arr, len);
}
